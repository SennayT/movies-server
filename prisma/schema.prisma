generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum MovieType {
  Movie
  Series
}

model Movie {
  id          String    @id @default(uuid())
  name        String
  image       String
  length      Int
  release     DateTime
  type        MovieType
  description String

  countries MovieCountry[]
  genres    MovieGenre[]
}

model Country {
  id   String @id @default(uuid())
  name String

  movies MovieCountry[]
}

model Genre {
  id   String @id @default(uuid())
  name String

  movies MovieGenre[]
}

model MovieCountry {
  movieId   String
  countryId String

  movie   Movie   @relation(fields: [movieId], references: [id])
  country Country @relation(fields: [countryId], references: [id])

  @@id([movieId, countryId])
}

model MovieGenre {
  movieId String
  genreId String

  movie Movie @relation(fields: [movieId], references: [id])
  genre Genre @relation(fields: [genreId], references: [id])

  @@id([movieId, genreId])
}
