// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum MovieType {
  Movie
  Series
}

model Movie {
  id          String    @id @default(uuid())
  name        String
  image       String
  length      Int
  release     DateTime
  type        MovieType
  description String

  countries        MovieCountry[]
  genres           MovieGenre[]
  movieDirectors   MovieDirector[]
  movieProductions MovieProduction[]
  movieCast        MovieCast[]
}

model Country {
  id   String @id @default(uuid())
  name String

  movies MovieCountry[]
}

model Genre {
  id   String @id @default(uuid())
  name String

  movies MovieGenre[]
}

model Director {
  id   String @id @default(uuid())
  name String

  movieDirectors MovieDirector[]
}

model Production {
  id   String @id @default(uuid())
  name String

  movieProductions MovieProduction[]
}

model Cast {
  id        String      @id @default(uuid())
  name      String
  movieCast MovieCast[]
}

model MovieCountry {
  movieId   String
  countryId String

  movie   Movie   @relation(fields: [movieId], references: [id])
  country Country @relation(fields: [countryId], references: [id])

  @@id([movieId, countryId])
}

model MovieGenre {
  movieId String
  genreId String

  movie Movie @relation(fields: [movieId], references: [id])
  genre Genre @relation(fields: [genreId], references: [id])

  @@id([movieId, genreId])
}

model MovieDirector {
  movieId    String
  directorId String

  movie    Movie    @relation(fields: [movieId], references: [id])
  director Director @relation(fields: [directorId], references: [id])

  @@id([movieId, directorId])
}

model MovieProduction {
  movieId      String
  productionId String

  movie      Movie      @relation(fields: [movieId], references: [id])
  production Production @relation(fields: [productionId], references: [id])

  @@id([movieId, productionId])
}

model MovieCast {
  movieId String
  castId  String

  movie Movie @relation(fields: [movieId], references: [id])
  cast  Cast  @relation(fields: [castId], references: [id])

  @@id([movieId, castId])
}
